<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Step 3 from: -->
    <!-- https://www.specbee.com/blogs/android-tutorials-recyclerview-and-its-item-click-listener-part-1-->
    <!-- Create layout activity_main.xml file in which we should implement Recyclerview -->
    <!-- See additional layout examples at: -->
    <!-- https://gist.github.com/Isabellle/d66ccbc7e88dc8c9b3429cf3ea8b6d97 -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_poster_grid"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <!-- Empty view is only visible when the list has no items.-->
    <TextView
        android:id="@+id/error_message_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/hello"
        android:visibility="invisible" />



    <!-- Progress Bar is only shown before the first load-->

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>